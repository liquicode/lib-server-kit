	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/cli/cli.js",
			"args": [
				"run",
				"0.0.0.0",
				"4200"
			],
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Run Tests",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"args": [
				"-u",
				"bdd",
				"tests/010*.js",
				"--timeout",
				"0",
			],
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "FindAllFiles",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/_scratch/FindAllFiles.js",
			"args": [],
			"internalConsoleOptions": "openOnSessionStart",
		}
	]
}