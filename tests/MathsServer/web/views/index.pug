body

	div( ng-app='Application_Module', ng-cloak )

		nav.w3-bar.w3-border.w3-light-grey( role="navigation" )
			img.w3-bar-item.w3-image.w3-responsive.w3-opacity( src='/images/logo-24x24.png' )
			.w3-bar-item.w3-text-grey Server
			a.w3-bar-item.w3-button( href="/" ) Home

			//- if locals.User && (locals.User.user_role !== 'public')
			if( locals.User )

				//- a.w3-bar-item.w3-button( href="/SimAccounts/ListMine" ) Accounts
				//- a.w3-bar-item.w3-button( href="/SimInstruments/ListMine" ) Instruments
				//- a.w3-bar-item.w3-button( href="/SimTools/ListMine" ) Tools
				//- a.w3-bar-item.w3-button( href="/SimSessions/ListMine" ) Sessions

				.w3-dropdown-hover.w3-right.w3-mobile

					button.w3-button
						if( locals.User.image_url )
							img.w3-round( src=`${locals.User.image_url}` style='width:24px; height:24px' )
						span.w3-margin= locals.User.user_name
						i.fa.fa-caret-down

					.w3-dropdown-content.w3-bar-block.w3-dark-grey

						if ( locals.User.user_role === 'public' )
							a.w3-bar-item.w3-button.w3-mobile( href="/auth/signup" ) Sign Up
							a.w3-bar-item.w3-button.w3-mobile( href="/auth/login" ) Log In

						if ( locals.User.user_role === 'admin' ) || ( locals.User.user_role === 'super' ) || ( locals.User.user_role === 'user' )
							a.w3-bar-item.w3-button.w3-mobile( href="/auth/user" ) User Account
							a.w3-bar-item.w3-button.w3-mobile( href="/auth/logout" ) Log Out

						if ( locals.User.user_role === 'admin' ) || ( locals.User.user_role === 'super' )
							.w3-bar-item.w3-border-bottom
							a.w3-bar-item.w3-button.no-wrap( href="/api/SystemUsers/FindMany" ) System Users

			else

				a( id="qsLoginBtn" href="/auth/signup" ).w3-bar-item.w3-button Sign Up
				a( id="qsLoginBtn" href="/auth/login" ).w3-bar-item.w3-button Log In

		block content
